<h1>Sistema de nacionalidade</h1>
<p>Digite abaixo o país em que você nasceu:</p>

<input type="text" name="pais" id="pais">
<input type="button" value="Verificar" onclick="clicou()">
<div id="resultado"></div>
<div id="res"></div>

<script>

function clicou(){

var paisB = String(pais.value)
resultado.innerHTML = `Você digitou o país <strong>${paisB}</strong>.</br></br>`

    if (paisB != 'brasil'){
        res.innerHTML = 'E portanto você é <strong>Gringo</strong>.'
    }else{
        res.innerHTML = 'E portanto você é <strong>Brasileiro</strong>'
    }

}

</script>
    
